// Environment Configuration for Production
NODE_ENV=production
PORT=5000

// Database Configuration (Update with your production database)
DB_HOST=your-production-db-host.rds.amazonaws.com
DB_PORT=5432
DB_NAME=masjid_erp
DB_USER=postgres
DB_PASSWORD=your_secure_production_password

// Redis Configuration (Update with your production Redis)
REDIS_HOST=your-redis-host.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

// JWT Secret (CHANGE THIS - Use a strong random string)
JWT_SECRET=CHANGE_THIS_TO_A_VERY_LONG_RANDOM_STRING_AT_LEAST_32_CHARACTERS
JWT_EXPIRE=7d

// Google Maps API (Get from Google Cloud Console)
GOOGLE_MAPS_API_KEY=your_production_google_maps_api_key

// Firebase Cloud Messaging (Get from Firebase Console)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour_Firebase_Private_Key_Here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

// Twilio (for SMS/WhatsApp) - Optional
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

// Payment Gateway (Optional for MVP) - Stripe
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

// Email Configuration (Optional) - Gmail or SendGrid
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password

// App Configuration
MASJID_VERIFICATION_RADIUS=500
DEFAULT_TIMEZONE=Asia/Karachi
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

// File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

// Logging
LOG_LEVEL=error

// Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
